# OLD WAY:

-----------
# Strongbox
-----------
  mkdir sbinstall; cd sbinstall;
  ssh -p 2222 -l raymorris raydesk1.bettercgi.com "cd /home/raymorris/sb/install; tar -z -B --exclude .svn --preserve --atime-preserve --sparse -cf -  ." | tar -p -B -xzvf -

# Remove all svn folders:
  find . -name '.svn' -exec rm -rf "{}" \;

# "Install" Strongbox:
./inst_ssh2


-------------
# Throttlebox
-------------
  mkdir tbinstall; cd tbinstall;
  ssh -p 2222 -l raymorris raydesk1.bettercgi.com "cd /home/raymorris/scripts/throttlebox/distrib; tar -z --exclude .svn -B --preserve --atime-preserve --sparse -cf -  htdocs cgi-bin docs inst_ssh2_tb" | tar -p -B -xzvf -

# Remove all svn folders:
  find . -name '.svn' -exec rm -rf "{}" \;

# Activate Throttlebox: 
  ./inst_ssh2_tb

